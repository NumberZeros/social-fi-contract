{
  "name": "social-fi-contract",
  "version": "0.1.0",
  "description": "Solana smart contract for Social Finance using Anchor",
  "license": "ISC",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy": "anchor deploy",
    "dev": "anchor test --skip-deploy",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "idl": "anchor idl fetch FHHfGX8mYxagDmhsXgJUfLnx1rw2M138e3beCwWELdgL -o target/idl/social_fi_contract.json",
    "migration:init": "ANCHOR_PROVIDER_URL=https://api.devnet.solana.com ANCHOR_WALLET=~/.config/solana/id.json ts-node migrations/initialize-platform.ts",
    "migration:verify": "ANCHOR_PROVIDER_URL=https://api.devnet.solana.com ANCHOR_WALLET=~/.config/solana/id.json ts-node migrations/verify-deployment.ts",
    "migration:deploy": "ts-node migrations/deploy.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.14"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
